{
    "name": "imiphp/imi-ai",
    "type": "project",
    "description": "基于 imi 框架开发的 AI 服务，支持 ChatGPT。",
    "require": {
        "php": ">=8.1",
        "ext-gd": "*",
        "ext-swoole": ">=5.0",
        "ankane/pgvector": "^0.1.2",
        "gemorroj/archive7z": "^5.6",
        "gioni06/gpt3-tokenizer": "^1.2",
        "guzzlehttp/guzzle": "^7.5",
        "hashids/hashids": "^5.0",
        "imiphp/imi": "2.1.x-dev",
        "imiphp/imi-email-blacklist": "~2.1.0",
        "imiphp/imi-jwt": "2.1.x-dev",
        "imiphp/imi-pgsql": "2.1.x-dev",
        "imiphp/imi-rate-limit": "2.1.x-dev",
        "imiphp/imi-swoole": "2.1.x-dev",
        "league/commonmark": "^2.4",
        "nyholm/psr7": "^1.6",
        "openai-php/client": "^0.6.4",
        "phpmailer/phpmailer": "^6.8",
        "swoole-inc/open-ai": "^1.5",
        "symfony/http-client": "^6.2",
        "yurunsoft/yurun-http": "^4.4"
    },
    "require-dev": {
        "imiphp/imi-phar": "2.1.x-dev",
        "php-cs-fixer/shim": "~3.22.0",
        "phpstan/phpstan": "~1.8.0",
        "swoole/ide-helper": "^5.0",
        "yurunsoft/ide-helper": "~1.0"
    },
    "replace": {
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "autoload": {
        "psr-4": {
            "app\\": "./"
        },
        "files": [
            "init.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "yurunsoft/ide-helper": true
        }
    },
    "scripts": {
        "format": "./vendor/bin/php-cs-fixer fix",
        "check-format": "./vendor/bin/php-cs-fixer fix --dry-run --diff -vvv",
        "phpstan": "./vendor/bin/phpstan"
    },
    "imi": {
        "namespace": "app"
    },
    "extra": {
        "ide-helper": {
            "list": [
                "redis"
            ]
        }
    }
}
